<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainChatController" stylesheets="@style.css" >
    <children>
        <MenuBar>
            <padding>
                <Insets topRightBottomLeft="5" />
            </padding>
            <Menu text="File">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#exit" text="Exit" />

            </Menu>
            <Menu text="Edit">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#mockAction" text="Item5" />
            </Menu>
            <Menu text="View">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#mockAction" text="Item4" />
                <MenuItem onAction="#mockAction" text="Item5" />
            </Menu>
            <Menu text="Help">
                <MenuItem onAction="#mockAction" text="Item1" />
                <MenuItem onAction="#mockAction" text="Item2" />
                <MenuItem onAction="#mockAction" text="Item3" />
                <MenuItem onAction="#showHelp" text="Help" />
                <MenuItem onAction="#showAbout" text="About" />
            </Menu>
        </MenuBar>
        <HBox VBox.vgrow="ALWAYS">
            <TextArea fx:id="chatArea" editable="false"  styleClass="/style.css" stylesheets="@style.css" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="5" />
                </HBox.margin>
            </TextArea>
<!--         <TextArea fx:id="chatArea1" editable="false" prefWidth="310.0" styleClass="/style.css" stylesheets="@style.css" HBox.hgrow="ALWAYS">-->
<!--            <HBox.margin>-->
<!--                <Insets right="5" />-->
<!--            </HBox.margin>-->
<!--         </TextArea>-->
            <ListView fx:id="onlineUsers" prefWidth="150.0">
            </ListView>
            <padding>
                <Insets topRightBottomLeft="5" />
            </padding>

        </HBox>
        <HBox>
            <TextField fx:id="inputField" onAction="#sendMessage" prefHeight="70.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin>
            <font>
               <Font size="24.0" />
            </font>
            </TextField>
            <Button fx:id="btnSendMessage" onAction="#sendMessage" prefHeight="70.0" prefWidth="150.0" text="SEND">
<!--                <HBox.margin>-->
<!--                    <Insets left="5.0" right="5.0" />-->
<!--                </HBox.margin>-->
            </Button>
            <padding>
                <Insets bottom="5" left="5" right="5" />
            </padding>
        </HBox>
    </children>
</VBox>
